@using Umbraco.Cms.Core.Models
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

<section class="showcase-section my-showcase-section">
    <div class="container my-showcase-container">
        <div class="content-column my-showcase-content">
            <h1>@Model.Value("showcaseTitle")</h1>
                 <p>@Model.Value("showcaseDescription")</p>
                 <div class="button-links my-showcase-button-links ">
                     <a class="btn-theme" href="@Model.Value("showcaseButtonUrl")">@Model.Value("showcaseButtonText")<i class="fa-solid fa-arrow-up-right"></i></a>
                     <a class="btn-theme" href="service.html">Learn More<i class="fa-solid fa-arrow-up-right"></i></a>
                 </div>
                 </div>
            <div class ="image-column my-showcase-imagecolumn">
                

 @{
    var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
    if (showcaseImage != null)
    {
        <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")">
    }
  }



            </div>    
            
        </div>
    </div>
</section> 

