@using Messi.Models;
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "_Layout.cshtml";
    ViewData["PageTitle"] = @Model.Value("pageTitle");
    ViewData["PageDescription"] = @Model.Value("pageDescription");
    ViewData["PageKeywords"] = @Model.Value("pageKeywords");

    var contactForm = new ContactForm();

}


<header>
    <div class="background">
        <img class="background-lines" src="~/images/backgrounds-effects/background-lines.svg" alt="">
    </div>
    @await Html.PartialAsync("_NavBar")
   
    
</header>
<main>
 @await Html.PartialAsync("_BreacrumbSnippet")

</main>

<section class="contactinfo-section">
    <div class="container">
        <div class="infobox">
         
            <div class="black-circle"><i class="fa-sharp fa-regular fa-location-dot"></i></div>
            <h5>Visit us</h5>
            <div class="info">
                <p>@Model.Value("contactInfomartionStreetName")</p>
                <p>@Model.Value("contactInfomartionPostalCode") @Model.Value("contactInfomartionCity")</p>
            </div>
        </div>
        <div class="infobox">
            <div class="black-circle"><i class="fa-regular fa-phone-volume"></i></div>
            <h5>Call us</h5>
            <div class="info">
                <p>@Model.Value("contactInfomartionPhone1")</p>
                <p>@Model.Value("contactInfomartionPhone2")</p>
            </div>
        </div>
        <div class="infobox">
            <div class="black-circle"><i class="fa-regular fa-envelope"></i></div>
            <h5>Email us</h5>
            <div class="info">
                <p>@Model.Value("contactInfomartionEmail1")</p>
                <p>@Model.Value("contactInfomartionEmail2")</p>
            </div>
        </div>
    </div>
</section>

<section class="contactinfo-section">
    
         <div class="container">
        <div class="email-envelope">
    <i class="fas fa-envelope"></i>
        </div>
        <h2>Leave Us A Message For Any Information</h2>

        @using (Html.BeginUmbracoForm("Index", "Contacts", FormMethod.Post))
        {

            
            <span asp-validation-for="@contactForm.Name"></span>
            <input asp-for="@contactForm.Name" type="text" placeholder="Name">
            <span asp-validation-for="@contactForm.Email"></span>
            <input asp-for="@contactForm.Email" type="email" placeholder="Email">
            <span asp-validation-for="@contactForm.Message"></span>
            <textarea asp-for="@contactForm.Message" placeholder="Your Message"></textarea>
            
            <div class="d-grid">
                <button class="btn-theme">Send Message <i class="fa-solid fa-arrow-up-right"></i></button>
            </div>
         }
    </div>
</section>

<section class="googlemaps-section">
    <iframe class="google-maps" src="@Model.Value("googleMapsURL")" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    
</section>